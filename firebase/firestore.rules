rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuarios: cada usuario solo puede leer/escribir su propio documento (uid == request.auth.uid)
    match /usuarios/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    // Encuestas: usuarios autenticados pueden leer las propias; crear las propias
    match /encuestas/{encuestaId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
      match /respuestas/{respuestaId} {
        allow read, write: if request.auth != null;
      }
    }
    // Alertas: solo lectura para usuarios con rol; escritura para admin/psicologo (validar en app o con custom claims)
    match /alertas/{alertaId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
  }
}
